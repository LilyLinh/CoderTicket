<!DOCTYPE html>
<html>
<head>
  <title>CsTemplate</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

  <nav class="navbar navbar-fixed-top navbar-dark bg-inverse">
    <a class="navbar-brand" href="<%= root_path %>">Coder Ticket</a>
   

    <ul class="nav navbar-nav">
      <% if current_user %>
       <li class="nav-item">
         <%= link_to "Log out #{current_user.email}", logout_path, method: 'delete', class: 'nav-link' %>
       </li>

       
       <% else %>
      <li class="nav-item">
        <%= link_to "Log In", new_session_path, class: 'nav-link' %>
      </li>
      <li class="nav-item">
        
      <%= link_to "Sign Up", users_new_path, class: 'nav-link' %>
      </li>
      <%end%>
    </ul>
  </nav>  
  <% unless flash.empty? %>
      <% flash.each do |key, value| %>
        <div class="alert alert-warning"><%= value%></div>
        <% end %>
        <% end%>

<%= yield %>

</body>
</html>
