<div class="container">
<div class="row">
  <div class="col-md-7 col-md-offset-3">
    <%= form_for @event do |f| %>
	<% unless @event.errors.empty? %>

	<div class="alert alert-danger">
	<%= @event.errors.full_messages.to_sentence %>
	</div>
	<% end %>

    <div class="form-group">
      <%= f.label :category_id, class: "control-label col-sm-8" %>
      <%= f.select :category_id, options_for_select(Category.all.map { |category| [category.name, category.id] }), required: true %>
    </div>

     <div class="form-group">
      <%= f.label :name, class: "control-label col-sm-8" %>
      <%= f.text_field :name, class: "col-sm-8"  %>
    </div>    

    <div class="form-group">
      <%= f.label :starts_at, class: "control-label col-sm-8" %>
      <%= f.date_field :starts_at, class: "col-sm-8"  %>
    </div>

     <div class="form-group">
      <%= f.label :ends_at, class: "control-label col-sm-8" %>
      <%= f.date_field :ends_at, class: "col-sm-8"  %>
    </div>

    <div class="form-group">
      <%= f.label :venue_id, class: "control-label col-sm-8" %>
      <%= f.select :venue_id, options_for_select(Venue.all.map { |venue| [venue.name, venue.id] }), required: true %>
    </div>

    <div class="form-group">
      <%= f.label :extended_html_description, class: "control-label col-sm-8" %>
      <%= f.text_field :extended_html_description, class: "col-sm-8"  %>
    </div>

    

    <div class="center">
      <%= f.submit "Submit", class: 'btn btn-primary' %>
    </div>
    <% end %>
  </div>
</div>
</div>
